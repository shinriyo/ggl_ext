{
    "name": "My First Browser Action",
    "description": "はじめての拡張！",
    "version": "0.1",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"]
    },
    "options_page": "options.html",
    "permissions": [
        "tabs", "http://*/*"
    ],
    "browser_action": {
        "default_icon": "icon19.png",
        "default_title": "My First Extension"
    }
}
